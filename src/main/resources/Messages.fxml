<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.esprit.Controllers.UserMessagesController"
>
   <left>
      <ListView prefHeight="400.0" prefWidth="247.0"
                BorderPane.alignment="CENTER"
                fx:id="userMessagesListView"
      />
   </left>

   <top>
      <TitledPane animated="false" prefHeight="34.0" prefWidth="600.0" text="untitled" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </TitledPane>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0"
            BorderPane.alignment="CENTER"
            fx:id="messagePane"
      >
         <children>
            <TextArea layoutX="4.0" layoutY="315.0"
                      prefHeight="47.0" prefWidth="310.0"
                      fx:id="messageTextArea"
            />
            <Button layoutX="316.0" layoutY="326.0"
                    mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="34.0" text="ok"
                    fx:id="sendButton"
            />
            <ListView layoutX="5.0" layoutY="7.0"
                      prefHeight="302.0" prefWidth="342.0"
                      fx:id="messagesListView"
            />
         </children>
      </Pane>
   </center>

</BorderPane>
